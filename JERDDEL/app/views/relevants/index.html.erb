    <h1 class="text-center page-header">Productos Relevantes</h1>
    <h4 class="text-center text-primary">Para una mejor visualización, es recomendable, no agregar más de 10 productos.</h4>
    <%= link_to 'Nuevo Producto', new_relevant_path, class: "btn btn-success" %>

    <hr>
    <table class="table table-responsive">
      <thead class="text-info">
      <tr>
        <th>Producto</th>
        <th>Tipo</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @relevant.each do |relevant|
      %>
              <tr>
                <td><%= relevant.product.name %></td>
                <td><%= relevant.tipo %></td>
                <td><%= link_to 'Editar', edit_relevant_path(relevant), class: "btn btn-warning" %></td>
                <td><%= link_to 'Eliminar', relevant, class: "btn btn-danger ", method: :delete, data: { confirm: '¿Estas Seguro?' } %></td>
              </tr>
          <% end%>
      </tbody>
    </table>
    <br>

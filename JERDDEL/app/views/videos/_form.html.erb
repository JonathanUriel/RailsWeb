<%= form_for(@video) do |f| %>
  <% if @video.errors.any? %>
      <div id="error_explanation">
        <h2>No se pudieron guardar los datos. <%= pluralize(@video.errors.count, "errore") %>: </h2>

        <ul>
        <% @video.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

      <div class="form-group">
        <div class="field">
          <%= f.label :Tipo %><br>
          <%= f.text_field :tipo, class: "form-control", value: @value, readonly: "true" %>
        </div>
      </div>

        <div class="form-group">
                <div class="field">
                  <%= f.label :URL %><br>
                  <%= f.text_area :url, class: "form-control" %>
                </div>
              </div>

    <div class="actions">
      <%= f.submit "Guardar", class: "btn btn-success" %>
    </div>

<%end%>

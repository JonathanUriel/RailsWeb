<article class="text-center page-header">
<h1>Lista de Proveedores</h1>
</article>
<%= link_to 'Nuevo Proveedor', new_provider_path, class: "btn btn-success" %>

<article class="form-inline container text-center">
  <article>
    <i>Busqueda por nombre del proveedor:</i>
  </article>
  <%= form_tag providers_path, :method => 'get' do %>
      <article class="form-group">
        <%= text_field_tag :search, params[:search],class: "form-control" %>
      </article>
      <article class="form-group">
        <%= submit_tag "Buscar", :name => nil, class: "btn btn-default form-control" %>
  <% end %>
  </article>
</article>
<hr>

<hr>
<table class="table table-responsive">
  <thead class="text-info">
    <tr>
      <th>Nombre</th>
      <th>Telefono</th>
      <th>Calle</th>
      <th>Colonia</th>
      <th>Numero</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @providers.each do |provider| %>
      <tr>
        <td><%= provider.name %></td>
        <td><%= provider.phone %></td>
        <td><%= provider.street %></td>
        <td><%= provider.colony %></td>
        <td><%= provider.number %></td>
        <td><%= provider.state.state %></td>
        <td><%= link_to 'Mostrar', provider, class: "btn btn-info" %></td>
        <td><%= link_to 'Editar', edit_provider_path(provider), class: "btn btn-warning" %></td>
        <td><%= link_to 'Eliminar', provider, class: "btn btn-danger ", method: :delete, data: { confirm: 'Â¿Estas Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

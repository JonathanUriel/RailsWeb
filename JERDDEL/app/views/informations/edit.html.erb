<article class="container page-header" style="width: 60%;">
  <article class="panel panel-primary">
    <article class="panel-heading">
      <h1>Editar Producto</h1>
    </article>
    <article class="panel-body">
      <%= form_for (@information) do |f| %>
          <% if @information.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@information.errors.count, "error") %> No se pudo actualizar los datos.</h2>

                <ul>
                  <% @information.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="form-group">
            <div class="file">
              <%= f.label :Historia %><br>
              <%= f.text_area :history, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <div class="file">
              <%= f.label :Misión %><br>
              <%= f.text_area :mission, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <div class="file">
              <%= f.label :Visión %><br>
              <%= f.text_area :vision, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <div class="file">
              <%= f.label :Valores %><br>
              <%= f.text_area :values, class: "form-control" %>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Guardar", class: "btn btn-success" %>
          </div>

          <div>
            <%= link_to 'Regresar', config_index_path, class: "btn btn-danger" %>
          </div>

      <%end%>
    </article>
  </article>
</article>
</article>

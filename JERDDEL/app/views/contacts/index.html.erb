<% if !notice.blank? %>
    <div class="alert alert-success">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <p><%= notice %></p>
    </div>
<%end%>

<article class="text-center page-header">
  <h1>Localizaciónes</h1>
</article>

<%= link_to 'Nueva Localización', new_contact_path, class: "btn btn-success" %>
<table class="table table-responsive">
  <thead class="text-info">
  <tr>
    <th>Empresa</th>
    <th>Direccion</th>
    <th>Telefono</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.address %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.email %></td>
        <td>
          <%if contact.has_imagen_contact? %>
              <%=image_tag(contact.imagen_path_contact, size:"50x50" )%>
          <% else %>
              <%= image_tag("/assets/missing.jpg", size: "50x50")  %>
          <%end%>
        </td>
        <td><%= link_to 'Mostrar', contact,class: "btn btn-info" %></td>
        <td><%= link_to 'Editar', edit_contact_path(contact),class: "btn btn-warning" %></td>
        <td><%= link_to 'Elimnar', contact,class: "btn btn-danger", method: :delete, data: { confirm: '¿Estas Seguro?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
